                 MaxLength="3" TextChanged="tb_ip_rangeStart3_TextChanged" />
        <TextBox x:Name="tb_ip_rangeStart4" HorizontalAlignment="Left" Height="18" Margin="264,29,0,0"
                 TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="36" TabIndex="4" Panel.ZIndex="1"
