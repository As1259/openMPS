<UserControl x:Class="de.fearvel.openMPS.UserInterface.UserControls.Settings.Settings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:de.fearvel.openMPS.UserInterface.UserControls.Settings"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="1050"
             Background="Transparent" Loaded="UserControl_Loaded">
    <Grid>
        <Border Margin="0,30,0,0" BorderThickness="0,1,0,0" BorderBrush="Black">
            <Grid HorizontalAlignment="Left" Height="570" Margin="200,0,0,0" VerticalAlignment="Top" Width="850"
                  Background="LightGray" x:Name="GridSetting"  />
        </Border>
        <ListBox HorizontalAlignment="Left" Height="570" VerticalAlignment="Top" Width="200"
                 Background="White" x:Name="ListBoxSettings" IsManipulationEnabled="False" SelectionChanged="ListBoxSettings_SelectionChanged" 
                 BorderBrush="Black" BorderThickness="0,1,1,0" Margin="0,30,0,0"/>

    </Grid>
</UserControl>